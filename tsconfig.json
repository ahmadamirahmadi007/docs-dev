{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "types": [
      // "vite/client" ,
       "node"
      ],
    "paths": {
      "@theme/*": [
        ".vitepress/theme/*"
      ]
    }
  },
  "include": [
    // "env.d.ts",
    "docs/**/*",
    "docs/.vitepress/**/*",
    "docs/**/*.ts",
    "docs/**/*.vue",
    "docs/**/*.md",
  ],
  "vueCompilerOptions": {
    "vitePressExtensions": [".md"],
  },
}
